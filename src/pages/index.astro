---
//styles
import "../styles/main.css";

// collections
import { getCollection } from "astro:content";
const allCoffees = await getCollection("coffees");
console.log("All coffees" + allCoffees);

// components
import Heading from "../components/heading.astro";
import CoffeeCard from "../components/CoffeeCard.astro";
import Cta from "../components/Cta.astro";
import Hero from "../components/Hero.astro";
import Nav from "../components/Nav.astro";
import Link from "../components/Link.astro";
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Poppins&display=swap"
      rel="stylesheet"
    />
    <title>Aroma & Craft Co. | Curated Coffee, Crafted Experiences</title>
  </head>
  <body class="font-serif font-bold text-pine-text max-w-[2000px] mx-auto">
    <Nav />
    <main class="grid gap-6 sm:gap-12 md:gap-20">
      <Hero />
      <p class="text-2xl sm:text-4xl text-center max-w-4xl mx-auto container">
        <span class="block text-4xl font-extrabold tracking-tight sm:text-5xl text-pine-accent">
          Uncover the Essence of Exceptional Coffee
        </span>
        <br />
        <span class="text-lg sm:text-xl">
          Aroma & Craft Co. invites you to embark on a journey of discovery, where exquisite coffee beans meet meticulous craft.
          
          We seek out the finest single origins and unique blends, each carefully roasted to reveal its full potential.
          <br />
          Prepare to be captivated by the vibrant aromas, delicate flavors, and captivating stories that each cup holds.
        </span>
      </p>
      <section class="container" aria-labelledby="coffee-for-sale">
        <Heading tagType="h2" size="h2" visible={false}>
          Coffees for Sale
        </Heading>
        <div class="grid gap-6 sm:gap-12 lg:gap-20 max-w-5xl mx-auto">
          {allCoffees.map((coffee) => <CoffeeCard coffee={coffee} />)}
        </div>
      </section>
      <Cta />
    </main>
  </body>
</html>
